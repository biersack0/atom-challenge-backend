{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": [
      "node",
      "jest"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "tests",
    "node_modules",
    "lib"
  ]
}